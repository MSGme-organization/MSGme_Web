generator client {
  provider = "prisma-client-js"
}

datasource MSGme {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         String    @id @default(uuid())
  username   String    @unique
  first_name String
  last_name  String
  email      String    @unique
  password   String
  dob        DateTime
  bio        String?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  Session    Session[]
}

model Session {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
}
